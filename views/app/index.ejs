<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <header>
      <form action="/sessions?_method=DELETE" method="POST">
        <input class="waves-effect waves-light btn" type="submit" value="Log Out">
      </form>
    </header>
    <button type="button" onclick="window.location.href='/app/new'">New Note</button>

    <% for (let i = 0; i < notes.length; i++) { %>
      <div class="note">
        <form action="/app/<%=notes[i].id%>?_method=DELETE" method="POST">
          <input type="submit" value="X">
        </form>
        <button type="button" onclick="window.location.href='/app/<%=notes[i].id%>/edit'">EDIT</button>
        <span>
          <h4><%=notes[i].title%></h4>
          <p><%=notes[i].publishDate%></p>
        </span>

        <p><%=notes[i].content%></p>
      </div>
    <% } %>
    <style media="screen">
      body {
        background-image: url("https://photo-cdn.icons8.com/assets/previews/151/68921a8c-e6e2-44cd-b865-e75b372573801x.jpg");
        color: black;
      }
      div {
        background-color: lightyellow;
      }
    </style>
  </body>
</html>
